
{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "jsx": "react",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
      ]
}
